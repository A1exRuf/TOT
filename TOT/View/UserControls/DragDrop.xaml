<UserControl x:Class="TOT.View.UserControls.DragDrop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TOT.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="8">
        <Rectangle
            x:Name="dragDropArea"
            Fill="DarkGray"
            AllowDrop="True"
            DragEnter="dragDropArea_DragEnter"
            DragOver="dragDropArea_DragOver"
            Drop="dragDropArea_Drop" />
    </Border>
</UserControl>

<Window x:Class="TOT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TOT"
        xmlns:userControls="clr-namespace:TOT.View.UserControls"
        mc:Ignorable="d"
        Title="TOT" Height="450" Width="800">
    <Grid x:Name="MainGrid" Background="DarkGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <userControls:MenuBar x:Name="menuBar"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <userControls:ToolsMenu/>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <userControls:ImageView x:Name="imageView" Grid.Row="0"/>
                <userControls:Footer Grid.Row="1"/>
            </Grid>
        </Grid>
    </Grid>
    
</Window>
